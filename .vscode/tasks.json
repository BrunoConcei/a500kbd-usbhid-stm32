    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "make",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "flash",
            "type": "shell",
            "command": "make flash",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}